{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Urtentic Documentation",
  "colors": {
    "primary": "#255CFF",
    "light": "#4D7AFF",
    "dark": "#1A3DB8"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "getting-started",
              "key-concepts",
              "webhooks/workflow-management",
              "webhooks/integration"
            ]
          },
          {
            "group": "Verification Processes",
            "pages": [
              "verification-processes/document-verification",
              "verification-processes/liveness",
              "verification-processes/location-intelligence",
              "verification-processes/email-verification",
              "verification-processes/video-agreement",
              "verification-processes/aml-watchlist"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "webhooks/overview",
              "webhooks/configuration"
            ]
          },
          {
            "group": "SDK",
            "pages": [
              "sdk/introduction",
              "sdk/web/getting-started",
              "sdk/direct-link/getting-started"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "api-reference/openapi.yml",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Verification",
            "pages": [
              "POST /verifications",
              "GET /verifications/{verificationId}/status",
              "POST /verifications/{verificationId}/send-inputs",
              "POST /verifications/{verificationId}/validations/{processType}"
            ]
          },
          {
            "group": "Workflows",
            "pages": [
              "GET /workflows/supported-document-types",
              "GET /workflows/{workflowId}/document-types",
              "POST /workflows/{workflowId}/email-otp"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "POST /webhooks/configure"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.urtentic.com",
          "icon": "gauge"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@urtentic.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.urtentic.com"
    }
  },
  "fonts": {
    "heading": {
      "family": "Inter",
      "weight": 700
    },
    "body": {
      "family": "Inter",
      "weight": 400
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/urtentic",
      "github": "https://github.com/urtentic",
      "linkedin": "https://linkedin.com/company/urtentic"
    }
  }
}
